{
    "@context": "https://schema.org/",
    "@type": "PrimitiveAction",
    "name": "COMMUNICATE",
    "description": "Sends a message from one agent to another",
    "input": {
      "@type": "Thing",
      "description": "The message to be sent"
    },
    "output": {
      "@type": "Thing",
      "description": "The response to the message"
    },
    "example": {
      "input": {
        "@type": "Message",
        "description": "Hello",
        "sender": "Agent A",
        "recipient": "Agent B"
      },
      "output": {
        "@type": "Message",
        "description": "Hi there!",
        "sender": "Agent B",
        "recipient": "Agent A"
      }
    }
  }
  