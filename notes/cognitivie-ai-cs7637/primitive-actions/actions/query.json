{
    "@context": "https://schema.org/",
    "@type": "PrimitiveAction",
    "name": "QUERY",
    "description": "Asks a question and obtains a response",
    "input": {
      "@type": "Thing",
      "description": "The question to be asked"
    },
    "output": {
      "@type": "Thing",
      "description": "The response to the question"
    },
    "example": {
      "input": {
        "@type": "Question",
        "description": "What is the capital of France?"
      },
      "output": {
        "@type": "Answer",
        "description": "The capital of France is Paris"
      }
    }
  }
  